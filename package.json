{
  "name": "cbrt-bol-system",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:staging": "vite --mode staging",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:staging": "vite build --mode staging",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "preview:staging": "vite preview --mode staging",
    "deploy:dev": "firebase use dev && firebase deploy",
    "deploy:staging": "firebase use staging && firebase deploy",
    "deploy:rules": "firebase deploy --only firestore:rules,firestore:indexes",
    "emulators": "firebase emulators:start",
    "wipe:dev": "firebase use dev && node scripts/wipe-firestore.js --yes",
    "wipe:staging": "firebase use staging && node scripts/wipe-firestore.js --yes",
    "wipe:auth:dev": "firebase use dev && node scripts/wipe-auth.js --yes",
    "wipe:auth:staging": "firebase use staging && node scripts/wipe-auth.js --yes",
    "wipe:storage:dev": "firebase use dev && node scripts/wipe-storage.js --yes",
    "wipe:storage:staging": "firebase use staging && node scripts/wipe-storage.js --yes",
    "wipe:all:dev": "npm run wipe:dev && npm run wipe:auth:dev && npm run wipe:storage:dev",
    "wipe:all:staging": "npm run wipe:staging && npm run wipe:auth:staging && npm run wipe:storage:staging",
    "seed:dev": "echo 'ERROR: Seeding is disabled by policy. Use the UI to create test data.' && exit 1",
    "seed:staging": "echo 'ERROR: Seeding is disabled by policy. Use the UI to create test data.' && exit 1",
    "seed:test": "echo 'ERROR: Seeding is disabled by policy. Use the UI to create test data.' && exit 1"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "firebase": "^10.1.0",
    "firebase-admin": "^13.4.0",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "jszip": "^3.10.1",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.7.1",
    "slugify": "^1.6.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "mkdirp": "^3.0.1",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "vite": "^4.5.14"
  }
}
